<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".payment_validation.IdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/payment_header_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/aldrich"
                android:text="Payment"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />
            <ImageView
                android:layout_alignTop="@id/payment_header_label"
                android:layout_toLeftOf="@id/payment_header_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment_icon"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress"
                android:layout_centerHorizontal="true"
                android:text="please do not press back"
                android:textColor="#F71C0C"
                android:visibility="invisible" />

            <TextView
                android:layout_below="@id/payment_header_label"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/aldrich"
                android:text="Name"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aldrich"
                android:text="phoneNumber"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/payment_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_number"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aldrich"
                android:text="Payment:"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <ImageView
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAccent"
                android:id="@+id/img_pay"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/payment_label"
                android:layout_marginTop="10dp"
                android:src="@drawable/no_pay" />

            <Button
                android:background="@color/colorAccent"
                android:textColor="@color/text_color"
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_pay"
                android:layout_marginTop="50dp"
                android:text="pay with GPay" />
            <ProgressBar
                android:layout_marginTop="20dp"
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>